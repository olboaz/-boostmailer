<!-- Modal -->
<div class="modal fade supplier-modal-csv" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content-csv">
      <div class="modal-header">
        Importation au format CSV
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body-csv mt-2">
        <%= form_tag customer_import_csv_path, multipart: true do %>
          <div class="d-flex flex-column">
            <label class="supplier-csv" >
              <label for="file" class="csv-text" style="margin-right: 0;margin-bottom: 0;"><i class="fas fa-file-import"></i><span class="title-csv" style="margin-top: 12px;">Ajouter un fichier</span>
                <span style="display:none;"><%= file_field_tag :file %></span>
              </label>
            </label>
            <span class="filename-csv" style="display:none; margin-top: 12px;">Fichier ajout√© !</span>
            <button href="#" class="btn-csv">
              <span class="btn-content">Importer Csv</span>
              <span class="icon"><i class="fas fa-arrow-right" aria-hidden="true"></i></span>
              <span style="display:none;"><%= submit_tag "Importer CSV" %></span>
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
