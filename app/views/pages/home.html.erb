<div class="main-title">
  <div class="title">
    <h1>Base clients</h1>
  </div>
  <div class="search-customer">
    <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-circle">
          <i class="fas fa-search"></i>
        </button>
      </div>
    </form>
  </div>
  <div class="button-add-customer">
    <a class="btn btn-flat mr-2" href="<%= new_customer_path %>">+ Client</a>
    <a class="btn btn-ghost" type="button" data-toggle="modal" data-target="#exampleModalCenter"><i class="fas fa-file-import"></i> <span class="pl-2">Importer</span></a>
    <%= render "/customers/modal_import_csv" %>

  </div>
</div>
<span>Total : <%= Customer.count  %></span>

<div class="main-content">

  <% @customers.nil? ? "" : @customers.each do |customer|  %>
    <%= link_to customer_path(customer), class: "link-customer" do %>
      <div class="card-product">
        <div class="card-customer-title">
          <h2><%= customer.restaurant_name %></h2>
        </div>
        <div class="card-product-infos">
          <h2><%= customer.first_name %> <%= customer.last_name %></h2>
          <p> <%= customer.email %></p>
        </div>
      </div>
      <% end %>

  <% end %>

</div>
